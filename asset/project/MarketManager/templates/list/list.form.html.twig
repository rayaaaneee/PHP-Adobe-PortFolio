{{ form_end(form) }}

<div class="buttons-container">
	<a href="{{ path('list') }}" class="btn btn-dark">Back to lists</a>
	{% if isEdit %}
		{{ include('list/list.delete.html.twig') }}
	{% endif %}
</div>
